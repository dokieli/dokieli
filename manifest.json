{
  "name": "dokieli",
  "short_name": "dokieli",
  "description": "dokieli is a clientside editor for decentralised article publishing, annotations and social interactions.",
  "author":"dokieli Team",
  "homepage_url": "https://dokie.li/",
  "version": "0.3.18",
  "manifest_version": 2,
  "minimum_chrome_version": "18",
  "offline_enabled": true,
  "applications": {
    "gecko": {
      "id": "i@dokie.li"
    }
  },
  "icons": {
    "16": "media/images/logo16.png",
    "48": "media/images/logo48.png",
   "128": "media/images/logo128.png"
   },
  "browser_action": {
    "default_icon": "media/images/logo16.png",
    "default_title": "Activate dokieli"
  },
  "background": {
    "scripts": [
      "extension-background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/simplerdf.js",
        "scripts/medium-editor.min.js",
        "scripts/medium-editor-tables.min.js",
        "scripts/solid-auth-client.bundle.js",
        "scripts/do.js",
        "extension-content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "management",
    "storage",
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": ["https://*.solid.openlinksw.com:8444/*", "https://solid.openlinksw.com:8444/*"]
  },
  "web_accessible_resources": [
    "media/css/*",
    "media/fonts/*"
  ]
}
